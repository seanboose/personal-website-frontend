{
  "name": "personal-website-frontend",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "build": "pnpm run lint && pnpm run typecheck && pnpm run build:prod",
    "build:prod": "react-router build -m production",
    "build:local": "react-router build -m development",
    "build:local-docker": "dotenv -c development -- docker-compose build",
    "dev": "concurrently -c yellow,cyan,magenta \"pnpm:dev:ts\" \"pnpm:lint:watch\" \"pnpm:typecheck:watch\"",
    "dev:ts": "react-router dev",
    "format": "prettier --write .",
    "lint": "eslint app",
    "lint:watch": "nodemon --watch app --ext js,ts,jsx,tsx --delay 100ms --exec \"pnpm run lint\"",
    "start": "pnpm run start:prod",
    "start:prod": "react-router-serve ./build/server/index.js",
    "start:local": "dotenv -c development -- react-router-serve ./build/server/index.js",
    "start:local-docker": "dotenv -c development -- docker-compose up",
    "stop:local-docker": "docker-compose down",
    "typecheck": "react-router typegen && tsc",
    "typecheck:watch": "react-router typegen && tsc --noEmit --watch"
  },
  "dependencies": {
    "@react-router/dev": "^7.9.5",
    "@react-router/node": "^7.9.5",
    "@react-router/serve": "^7.9.5",
    "@seanboose/personal-website-api-types": "1.0.12",
    "isbot": "^5.1.27",
    "jwt-decode": "^4.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.9.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tailwindcss/vite": "^4.1.4",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.2.2",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
